<% provide(:title, 'Record details') %>
<% content_for :main_content do %>

    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">Finance record</h3>
      </div>

      <div class="panel-body">

        <p>
          <strong>Name:</strong>
          <%= @moneyrecord.name %>
        </p>

        <p>
          <strong>Type:</strong>
          <%= @moneyrecord.category.record_type == 1 ? 'Income' : 'Expense' %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @moneyrecord.category.name %>
        </p>

        <p>
          <strong>Amount:</strong>
          <%= @moneyrecord.amount %>
        </p>

        <p>
          <strong>Added:</strong>
          <%= @moneyrecord.created_at %>
        </p>

      </div>

    </div>

    <%= link_to 'Edit', edit_moneyrecord_path(@moneyrecord), class: 'btn btn-primary' %>
    <%= link_to 'Back', moneyrecords_path, class: 'btn btn-primary' %>

<% end %>

<%= render 'layouts/userarea' %>
