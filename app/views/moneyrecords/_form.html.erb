<%= bootstrap_form_for @moneyrecord do |f| %>

    <%= f.alert_message 'Please fix the errors below:' %>

    <%= f.text_field :name, placeholder: 'Add some description ', label: 'Comment' %>
    <%= f.date_field :created_at %>
    <%= f.text_field :amount %>
    <%= f.select(:category_id, options_for_select(@category_list, @selected_category)) %>
    <%= f.submit 'Submit' %>

<% end %>
