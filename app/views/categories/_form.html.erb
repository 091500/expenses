<%= bootstrap_form_for @category do |f| %>

  <%= f.alert_message 'Please fix the errors below:' %>

  <%= f.text_field :name, class: 'form-control', placeholder: 'Category name' %>
  <%= f.select(:record_type, options_for_select(@record_types, @selected_record_type)) %>
  <%= f.submit 'Submit' %>

<% end %>
